{% extends 'base.html.twig' %}

{% block title %}Devices{% endblock %}

{% block body %}
    <h1>Devices</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ device.id }}</td>
            </tr>
            <tr>
                <th>Serial</th>
                <td>{{ device.serial }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ device.name }}</td>
            </tr>
            <tr>
                <th>Maker</th>
                <td>{{ device.maker }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ device.model }}</td>
            </tr>
            <tr>
                <th>Produced</th>
                <td>{{ device.produced }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ device.price }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('devices_index') }}">back to list</a>

    <a href="{{ path('devices_edit', {'id': device.id}) }}">edit</a>

    {{ include('devices/_delete_form.html.twig') }}
{% endblock %}