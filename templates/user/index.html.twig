{% extends 'base.html.twig' %}

{% block title %}Password Change{% endblock %}
{% block stylesheet_libs %}
    {{ parent() }}
    <link href="/css/html5imageupload.css" rel="stylesheet" type="text/css" />
{% endblock %}
{% block javascript_libs %}
    {{ parent() }}
    <script src="/js/html5imageupload.min.js"></script>
{% endblock %}

{% block javascript_apps %}
    {{ parent() }}
    <script src="/js/user.js"></script>
{% endblock %}

{% block body %}
{% include "_page_title.html.twig" with {'title': 'Profile', 'main': 'User', 'current': 'Profile'} %}
<div class="rows">
		<div class="col-xl-12">
			<div class="card">
				<div class="card-body">
                    <form action="{{ path('profile')}}" class="mt-5 mb-5" method="post">
                        <div class="row">
                            <div class="col-sm-5">
                                <center class="mb-4">
                                    <div class="dropzone" data-originalsize="false" data-width="200" data-height="200" data-field="image"
                                        data-image="{{ app.user.image ? app.user.image : '/images/user-1jpg' }}" data-editstart="false"
                                        data-dimensionsonly="false" data-url="/user/upload" data-removeurl="/user/remove"
                                        style="width: 200px;">
                                        <input type="file" name="thumb" />
                                    </div>
                                </center>
                                <input id="image" class="form-control" type="text" name="image" value="{{ app.user.image }}" required readonly="readonly"/>
                            </div>
                            <div class="col-sm-7">
                                <div class="row mb-3">
                                    <label class="col-sm-3 text-end control-label col-form-label">Username:</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" type="text" name="username" value="{{ app.user.username }}" required />
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label class="col-sm-3 text-end control-label col-form-label">Name:</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" type="text" name="name" value="{{ app.user.name }}" required />
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label class="col-sm-3 text-end control-label col-form-label">Email:</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" type="email" name="email" value="{{ app.user.email }}" required />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12 text-end">
                                        <button type="submit" class="btn btn-success waves-effect waves-light">Save</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
