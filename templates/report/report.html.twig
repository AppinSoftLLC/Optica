{% extends 'base.html.twig' %}

{% block title %}Reports{% endblock %}

{% block body %}
    {% include "_page_title.html.twig" with {'title': 'Reports', 'main': 'Home', 'current': 'Reports'} %}
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <h5 class="card-header bg-transparent border-bottom">Single Device Report</h5>
                <div class="card-body">
                    <form action="{{ path('report_single') }}" method="post" class="row g-3 align-items-center">
                        <div class="col-3">
                            <label for="single-device" class="col-form-label">Device</label>
                            <select id="single-device" class="form-select">
                                {% for room in rooms %}
                                    <optgroup label="Room #{{ room.name }}">
                                        {% if room.devices is defined %}
                                            {% for device in room.devices %}
                                                <option value="{{ device.id }}">{{ device.name }}</option>
                                            {% endfor %}
                                        {% endif %}
                                    </optgroup>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-3">
                            <label for="single-start-date" class="col-form-label">Start</label>
                            <input id="single-start-date" class="form-control" type="date" value="{{ "now" | date('Y-m-d') }}" />
                        </div>
                        <div class="col-3">
                            <label for="single-end-date" class="col-form-label">End</label>
                            <input id="single-end-date" class="form-control" type="date" value="{{ "now" | date('Y-m-d') }}" />
                        </div>
                        <div class="col-3">
                            <label for="single-btn-sub" class="col-form-label">&nbsp;</label>
                            <br />
                            <button id="single-btn-sub" type="submit" class="btn btn-success waves-effect waves-light">View Report</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <h5 class="card-header bg-transparent border-bottom">All Device Report</h5>
                <div class="card-body">
                    <form action="{{ path('report_all') }}" method="post" class="row g-3 align-items-center">
                        <div class="col-3">
                            <label for="start-date" class="col-form-label">Start</label>
                            <input id="start-date" class="form-control" type="date" value="{{ "now" | date('Y-m-d') }}" />
                        </div>
                        <div class="col-3">
                            <label for="end-date" class="col-form-label">End</label>
                            <input id="end-date" class="form-control" type="date" value="{{ "now" | date('Y-m-d') }}" />
                        </div>
                        <div class="col-3">
                            <label for="btn-sub" class="col-form-label">&nbsp;</label>
                            <br />
                            <button id="btn-sub" type="submit" class="btn btn-success waves-effect waves-light">View Report</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <h5 class="card-header bg-transparent border-bottom">Abnormal Device Report</h5>
                <div class="card-body">
                    <form action="{{ path('report_abnormal') }}" method="post" class="row g-3 align-items-center">
                        <div class="col-3">
                            <label for="start-date" class="col-form-label">Start</label>
                            <input id="start-date" class="form-control" type="date" value="{{ "now" | date('Y-m-d') }}" />
                        </div>
                        <div class="col-3">
                            <label for="end-date" class="col-form-label">End</label>
                            <input id="end-date" class="form-control" type="date" value="{{ "now" | date('Y-m-d') }}" />
                        </div>
                        <div class="col-3">
                            <label for="btn-sub" class="col-form-label">&nbsp;</label>
                            <br />
                            <button id="btn-sub" type="submit" class="btn btn-success waves-effect waves-light">View Report</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}