{% extends 'base.html.twig' %}

{% block title %}Reports{% endblock %}

{% block body %}
    {% include "_page_title.html.twig" with {'title': 'Reports', 'main': 'Home', 'current': 'Abnormal Device Report'} %}
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                    <h4 class="card-title bg-transparent">Abnormal Device Report</h4>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th style="width: 50px">#</th>
                                    <th style="width: 110px">Date</th>
                                    <th style="width: 90px">Room #</th>
                                    <th style="width: 200px">Device</th>
                                    <th>Comment</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for checkup in checkups %}
                                    <tr>
                                        <td>{{ loop.index }}.</td>
                                        <td>{{ checkup.dates | date('Y-m-d') }}.</td>
                                        <td>{{ checkup.deviceid.roomid.name }}</td>
                                        <td>{{ checkup.deviceid.name }}</td>
                                        <td>{{ checkup.comments }}</td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="3">No records found</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}