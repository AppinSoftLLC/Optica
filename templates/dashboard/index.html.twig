{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-4">
        	<div class="card mini-stats-wid">
				<div class="card-body">
					<div class="d-flex">
						<div class="flex-grow-1">
							<p class="text-muted fw-medium">Rooms</p>
							<h4 class="mb-0">{{ room_total }}</h4>
						</div>
						<div class="flex-shrink-0 align-self-center">
							<div class="mini-stat-icon avatar-sm rounded-circle bg-primary">
								<span class="avatar-title">
									<i class="mdi mdi-doorbell font-size-24"></i>
								</span>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
        <div class="col-md-4">
			<div class="card mini-stats-wid">
				<div class="card-body">
					<div class="d-flex">
						<div class="flex-grow-1">
							<p class="text-muted fw-medium">Devices</p>
							<h4 class="mb-0">{{ device_total }}</h4>
						</div>
						<div class="flex-shrink-0 align-self-center">
							<div class="mini-stat-icon avatar-sm rounded-circle bg-primary">
								<span class="avatar-title">
									<i class="bx bx-devices font-size-24"></i>
								</span>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
        <div class="col-md-4">
			<div class="card mini-stats-wid">
				<div class="card-body">
					<div class="d-flex">
						<div class="flex-grow-1">
							<p class="text-muted fw-medium">Checks</p>
							<h4 class="mb-0">{{ checkup_total }}</h4>
						</div>
						<div class="flex-shrink-0 align-self-center">
							<div class="mini-stat-icon avatar-sm rounded-circle bg-primary">
								<span class="avatar-title">
									<i class="bx bx-check-square font-size-24"></i>
								</span>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
    </div>
	<div class="row">
		<div class="col-md-6">
			<div class="card">
				<div class="card-body">
					<h4 class="card-title">Labels Example</h4>
                                        <p class="card-title-desc">Add labels to your progress bars by placing text within the <code class="highlighter-rouge">.progress-bar</code>.</p>
        
                                        <div class="">
                                            <div class="progress">
                                                <div class="progress-bar" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">25%</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<div class="card">
                <div class="card-body">
                	<h4 class="card-title mb-4">Devices with abnormal <span class="float-end">{{ 'now' | date('Y-m-d') }}</span></h4>
					<div class="table-responsive">
						<table class="table mb-0">
							<thead class="table-light">
								<tr>
									<th>#</th>
									<th>Room #</th>
									<th>Device</th>
									<th>Comment</th>
								</tr>
							</thead>
							<tbody>
								{% for comment in checkupcomments %}
									<tr>
										<th scope="row">{{ loop.index }}.</th>
										<td>{{ comment.deviceid.roomid.name }}</td>
										<td>{{ comment.deviceid.name }}</td>
										<td>{{ comment.comments }}</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}