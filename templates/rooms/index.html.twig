{% extends 'base.html.twig' %}

{% block title %}Rooms{% endblock %}

{% block body %}
	{% include "_page_title.html.twig" with {'title': 'Rooms', 'main': 'Setting', 'current': 'Rooms'} %}
	<div class="rows">
		<div class="col-xl-12">
			<div class="card">
				<div class="card-body">
					<div class="table-responsive">
						<h4 class="card-title">All Rooms</h4>
						<p class="card-title-desc">All rooms with device's</p>
						<div class="table-responsive">
							<table class="table align-middle mb-0">
								<thead>
									<tr>
										<th>#</th>
										<th>Room #</th>
										<th>Action</th>
									</tr>
								</thead>
								<tbody>
									{% for room in rooms %}
									<tr>
										<td style="width: 60px">{{ loop.index }}.</td>
										<td>{{ room.name }}</td>
										<td style="width: 160px">
											<div class="d-flex">
												<a class="btn btn-light btn-sm me-2" href="{{path('rooms_edit', {id: room.id})}}">Edit</a>
												{{ include('rooms/_delete_form.html.twig') }}
											</div>
										</td>
									</tr>
									{% else %}
										<tr>
											<td colspan="3">no records found</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>
						</div>
					</div>
				</div>
				<div class="card-footer bg-transparent text-muted text-end">
					<a class="btn btn-success waves-effect waves-light" href="{{ path('rooms_new') }}">Create new</a>
				</div>
			</div>
		</div>
	</div>
{% endblock %}